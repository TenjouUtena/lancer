# Example Terraform variables file
# Copy this to terraform.tfvars and modify as needed

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "lancer"
environment  = "dev"

# Network Configuration
vpc_cidr = "10.0.0.0/16"

# Database Configuration
db_instance_class = "db.t3.micro"  # Use db.t3.small or larger for production
db_name          = "lancer"
db_username      = "lanceruser"

# API Configuration
api_cpu           = 256   # 256 = 0.25 vCPU
api_memory        = 512   # 512 MB
api_desired_count = 1     # Number of API containers

# Domain Configuration (Optional)
# domain_name   = "api.yourdomain.com"
# enable_https  = true

# Common Tags
tags = {
  Project     = "Lancer"
  Environment = "dev"
  Owner       = "your-name"
  Terraform   = "true"
  CostCenter  = "engineering"
}